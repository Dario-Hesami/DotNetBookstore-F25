@model IEnumerable<DotNetBookstore.Models.Book>

@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .hero-section {
            position: relative;
            background: linear-gradient(135deg, #0d6efd 0%, #6610f2 100%);
            color: #fff;
            padding: 5rem 0 4rem;
            border-radius: 0 0 2rem 2rem;
            overflow: hidden;
            margin-bottom: 2rem;
        }
        .hero-section::after {
            content: "";
            position: absolute;
            bottom: -40px;
            left: -10%;
            width: 120%;
            height: 120px;
            background: #fff;
            border-radius: 50% 50% 0 0;
            filter: blur(20px);
            opacity: .15;
        }
        .hero-section .display-3 {
            letter-spacing: .5px;
        }
        .hero-section .lead {
            opacity: .95;
        }
        .hero-actions .btn {
            padding: .8rem 1.25rem;
            border-radius: .75rem;
        }
        .hero-actions .btn i { margin-right: .35rem; }

        .featured-books h2 {
            font-weight: 700;
            letter-spacing: .3px;
        }

        .book-card {
            border: 0;
            border-radius: 1rem;
            overflow: hidden;
            transition: transform .18s ease, box-shadow .18s ease;
        }
        .book-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 1rem 2rem rgba(0,0,0,.12);
        }
        .book-card .card-img-top {
            height: 220px;
            object-fit: cover;
        }
        .category-badge {
            position: absolute;
            top: .75rem;
            left: .75rem;
            background: rgba(13,110,253,.95);
            color: #fff;
            border-radius: 999px;
            padding: .25rem .65rem;
            font-size: .75rem;
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15);
        }
        .mature-badge {
            position: absolute;
            top: .75rem;
            right: .75rem;
            background: #dc3545;
            color: #fff;
            border-radius: .4rem;
            padding: .25rem .45rem;
            font-size: .7rem;
        }
        .price-tag {
            font-weight: 700;
            color: #0d6efd;
        }
        .empty-state {
            background: #f8f9fa;
            border: 1px dashed #dee2e6;
            border-radius: .75rem;
            padding: 2rem;
        }
    </style>
}

<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-9">
                <h1 class="display-3 fw-bold mb-3">
                    <i class="bi bi-book-half"></i> Welcome to DotNet Bookstore
                </h1>
                <p class="lead mb-4">Discover your next great read. Browse, search, and buy books online!</p>
                <div class="hero-actions d-flex gap-2 flex-wrap">
                    <a asp-controller="Books" asp-action="Index" class="btn btn-light shadow">
                        <i class="bi bi-collection"></i> Browse All Books
                    </a>
                    <a asp-controller="Categories" asp-action="Index" class="btn btn-outline-light">
                        <i class="bi bi-tags"></i> Shop by Category
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container featured-books mb-5">
    <h2 class="mb-4 text-center">Featured Books</h2>
    <div class="row g-4 justify-content-center">
        @if (Model != null && Model.Any())
        {
            foreach (var book in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card book-card h-100 shadow-sm">
                        <div class="position-relative">
                            <img src="~/images/books/@(book.Image ?? "bookcover-placeholder.jpg")" class="card-img-top" alt="@book.Title" />
                            @if (!string.IsNullOrWhiteSpace(book?.Category?.Name))
                            {
                                <span class="badge category-badge">@book.Category.Name</span>
                            }
                            @if (book.MatureContent)
                            {
                                <span class="badge mature-badge">18+</span>
                            }
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@book.Title</h5>
                            <p class="card-text text-muted mb-1">@book.Author</p>
                            <p class="card-text price-tag mb-3">@book.Price.ToString("C")</p>
                            <a asp-controller="Books" asp-action="Details" asp-route-id="@book.BookId" class="btn btn-primary mt-auto">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="empty-state text-center">
                    <i class="bi bi-emoji-neutral display-5 d-block mb-2 text-secondary"></i>
                    <p class="mb-1">No featured books available at the moment.</p>
                    <a asp-controller="Books" asp-action="Index" class="btn btn-outline-primary btn-sm mt-2">
                        Browse Catalog
                    </a>
                </div>
            </div>
        }
    </div>
</div>
