@model DotNetBookstore.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="card shadow border-0 mb-4">
                <div class="card-header bg-gradient bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="h4 mb-0"><i class="bi bi-receipt"></i> Order Details</h2>
                    <span class="badge bg-light text-primary fw-semibold">#@Model.OrderId</span>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="p-3 rounded bg-light h-100">
                                <h5 class="text-primary mb-3"><i class="bi bi-person-circle"></i> Customer</h5>
                                <p class="mb-1 fw-semibold">@Model.FirstName @Model.LastName</p>
                                <p class="mb-1 small text-secondary">Customer Id: <span class="text-dark">@Model.CustomerId</span></p>
                                <p class="mb-0 small text-secondary">Phone: <span class="text-dark">@Model.Phone</span></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 rounded bg-light h-100">
                                <h5 class="text-primary mb-3"><i class="bi bi-geo-alt"></i> Shipping Address</h5>
                                <p class="mb-1">@Model.Address</p>
                                <p class="mb-1">@Model.City, @Model.Province</p>
                                <p class="mb-0">@Model.PostalCode</p>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex flex-wrap gap-3 align-items-center border-top pt-3">
                                <div class="me-3"><span class="text-secondary">Order Date:</span> <span class="fw-semibold">@Html.DisplayFor(m => m.OrderDate)</span></div>
                                <div class="me-3"><span class="text-secondary">Total Items:</span> <span class="fw-semibold">@Model.OrderDetails.Sum(d => d.Quantity)</span></div>
                                <div class="me-3"><span class="text-secondary">Subtotal:</span> <span class="fw-semibold">@String.Format("{0:c}", Model.OrderDetails.Sum(d => d.Price * d.Quantity))</span></div>
                                <div class="ms-auto">
                                    <span class="badge rounded-pill bg-success fs-6">Total: @Html.DisplayFor(m => m.OrderTotal)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <h5 class="mb-3 text-primary"><i class="bi bi-card-list"></i> Items</h5>
                    <div class="table-responsive">
                        <table class="table table-sm table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width:40%">Book</th>
                                    <th class="text-center" style="width:15%">Quantity</th>
                                    <th class="text-end" style="width:15%">Unit Price</th>
                                    <th class="text-end" style="width:15%">Line Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderDetails)
                                {
                                    <tr>
                                        <td class="fw-semibold">@item.Book.Title</td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">@String.Format("{0:c}", item.Price)</td>
                                        <td class="text-end">@String.Format("{0:c}", item.Price * item.Quantity)</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-info">
                                    <td colspan="3" class="text-end fw-bold">Order Total:</td>
                                    <td class="text-end fw-bold text-success">@Html.DisplayFor(model => model.OrderTotal)</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
                <div class="card-footer bg-white d-flex justify-content-between align-items-center">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-clock-history"></i> Order History
                    </a>
                    <button type="button" class="btn btn-outline-primary" onclick="window.print()">
                        <i class="bi bi-printer"></i> Print
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>